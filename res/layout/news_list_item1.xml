<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/activity_vertical_margin"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/aa_button_light_normal"
        android:orientation="vertical" 
        android:paddingBottom="10dp">

        <TextView
            android:id="@+id/tv_newsitem_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:text="[图+视频]可把任何平面变成多点触控区域的Haptix 3D运动传感器	"
            android:textSize="18sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp" >

            <LinearLayout
                android:id="@+id/layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/iv_newsitem_image"
                android:orientation="vertical" >
                
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="5dp"
                    android:paddingRight="10dp"
                    android:paddingTop="5dp" >

                    <TextView
                        android:id="@+id/tv_newsitem_time"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:drawableLeft="@drawable/icon_time"
                        android:gravity="center_vertical"
                        android:textColor="@color/gray"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/tv_newsitem_com"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:layout_marginLeft="10dp"
                        android:drawableLeft="@drawable/icon_comments"
                        android:gravity="center_vertical"
                        android:textColor="@color/gray"
                        android:textSize="13sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_newsitem_summary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="3"
                    android:text="我们已经见到了不少有趣的新概念输入设备，从分体式键盘到悬浮打字应用。而本文要介绍的Haptix，则是一款紧凑型的三维运动传感器，可以将任何平面区域变成一个多点触控区域。相信它可以在一定程度上取代传统的键盘和鼠标。这款概念性设备已经在Kickstarter上筹集到了超过13万美元的资金，你只要花上70美元就能够拿到这套3D多点触控设备。"
                    android:textSize="15sp" />

            </LinearLayout>

            <ImageView
                android:id="@+id/iv_newsitem_image"
                android:layout_width="90dp"
                android:layout_height="150dp"
                android:layout_alignBottom="@+id/layout"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:src="@drawable/aa_photo_empty" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>